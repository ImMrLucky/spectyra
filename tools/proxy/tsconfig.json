{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["spectyra-proxy.ts"],
  "exclude": ["node_modules", "dist", "dashboard", "*.md", "scripts", "**/*.test.ts"]
}

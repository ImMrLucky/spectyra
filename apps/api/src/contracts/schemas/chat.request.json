{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/chat.request.json",
  "title": "Chat Request",
  "type": "object",
  "additionalProperties": false,
  "required": ["path", "optimization_level", "provider", "model", "messages"],
  "properties": {
    "path": {
      "$ref": "defs.json#/$defs/Path"
    },
    "optimization_level": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4
    },
    "provider": {
      "type": "string",
      "minLength": 1
    },
    "model": {
      "type": "string",
      "minLength": 1
    },
    "conversation_id": {
      "type": "string"
    },
    "messages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["role", "content"],
        "properties": {
          "role": {
            "type": "string",
            "enum": ["system", "user", "assistant"]
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}

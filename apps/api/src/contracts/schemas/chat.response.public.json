{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/chat.response.public.json",
  "title": "Chat Response (Public)",
  "type": "object",
  "additionalProperties": false,
  "required": ["run_id", "created_at", "mode", "path", "optimization_level", "provider", "model", "response_text", "usage", "cost_usd"],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "created_at": {
      "$ref": "defs.json#/$defs/ISODateTime"
    },
    "mode": {
      "$ref": "defs.json#/$defs/Mode"
    },
    "path": {
      "$ref": "defs.json#/$defs/Path"
    },
    "optimization_level": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4
    },
    "provider": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "response_text": {
      "type": "string"
    },
    "usage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["input_tokens", "output_tokens", "total_tokens"],
      "properties": {
        "input_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "output_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "cost_usd": {
      "type": "number",
      "minimum": 0
    },
    "savings": {
      "description": "Optional: present when backend can compute verified/estimated baseline for this run",
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": ["savings_type", "tokens_saved", "pct_saved", "cost_saved_usd", "confidence_band"],
      "properties": {
        "savings_type": {
          "$ref": "defs.json#/$defs/SavingsType"
        },
        "tokens_saved": {
          "type": "number"
        },
        "pct_saved": {
          "type": "number"
        },
        "cost_saved_usd": {
          "type": "number"
        },
        "confidence_band": {
          "$ref": "defs.json#/$defs/ConfidenceBand"
        }
      }
    }
  }
}

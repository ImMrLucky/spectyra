{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/savings.by_level.response.public.json",
  "title": "Savings by Optimization Level (Public)",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["level", "verified", "estimated", "combined"],
    "properties": {
      "level": {
        "type": "integer",
        "minimum": 0,
        "maximum": 4
      },
      "verified": {
        "type": "object",
        "additionalProperties": false,
        "required": ["tokens_saved", "cost_saved_usd", "replays", "pct_saved"],
        "properties": {
          "tokens_saved": {
            "type": "number"
          },
          "cost_saved_usd": {
            "type": "number"
          },
          "replays": {
            "type": "integer"
          },
          "pct_saved": {
            "type": "number"
          }
        }
      },
      "estimated": {
        "type": "object",
        "additionalProperties": false,
        "required": ["tokens_saved", "cost_saved_usd", "rows", "pct_saved", "avg_confidence_band"],
        "properties": {
          "tokens_saved": {
            "type": "number"
          },
          "cost_saved_usd": {
            "type": "number"
          },
          "rows": {
            "type": "integer"
          },
          "pct_saved": {
            "type": "number"
          },
          "avg_confidence_band": {
            "$ref": "defs.json#/$defs/ConfidenceBand"
          }
        }
      },
      "combined": {
        "type": "object",
        "additionalProperties": false,
        "required": ["tokens_saved", "cost_saved_usd", "pct_saved"],
        "properties": {
          "tokens_saved": {
            "type": "number"
          },
          "cost_saved_usd": {
            "type": "number"
          },
          "pct_saved": {
            "type": "number"
          }
        }
      }
    }
  }
}
